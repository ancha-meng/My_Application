<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context="com.example.myapplication.ui.login_register.RegisterActivity">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Logo区域 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/register_bh"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/username_label"
        android:layout_marginTop="16dp" />

    <!-- 用户名 -->
    <TextView
        android:id="@+id/username_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/username_label"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 邮箱 -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="邮箱："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/email_label"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 密码 -->
    <TextView
        android:id="@+id/password_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/password_label"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 确认密码 -->
    <TextView
        android:id="@+id/confirm_password_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="确认密码："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm_password_label"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 性别 -->
    <TextView
        android:id="@+id/gender_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gender_label"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 头像 -->
    <TextView
        android:id="@+id/avatar_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="头像："
        android:textSize="16sp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/avatar_path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:onClick="selectAvatar"/>

    <ImageView
        android:id="@+id/avatar_path"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:contentDescription="点击选择头像"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_label"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        android:layout_marginRight="95dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <!-- 注册按钮 -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_path"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    <!-- 登录链接 -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？点此登录"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:onClick="goToLogin"/>

</androidx.constraintlayout.widget.ConstraintLayout>
